<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content">

  <TextView
      android:id="@+id/text_item"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:elevation="@dimen/elevation_low"
      android:layout_centerInParent="true"
      android:layout_marginLeft="@dimen/margin_normal"
      android:layout_marginTop="@dimen/margin_normal"
      android:background="@drawable/subscribe_item_bg"
      android:gravity="center"
      android:maxLines="1"
      android:ellipsize="end"
      android:paddingBottom="@dimen/margin_small"
      android:paddingTop="@dimen/margin_small"
      android:textColor="@color/subscribe_item_text_color"
      android:textSize="@dimen/text_small" />

  <RelativeLayout
      android:id="@+id/ri_delete"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:elevation="@dimen/elevation_mid"
      android:background="@drawable/item_delecte_shape"
      android:layout_alignParentRight="true"
      android:clickable="true"
      android:focusable="false"
      android:padding="@dimen/margin_small"
      android:visibility="invisible">

    <ImageView
        android:layout_width="@dimen/margin_normal"
        android:layout_height="@dimen/margin_normal"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_clear" />
  </RelativeLayout>

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/icon_new"
      android:layout_width="@dimen/margin_normal"
      android:layout_height="@dimen/margin_normal"
      android:elevation="@dimen/elevation_mid"
      android:layout_alignBottom="@id/text_item"
      android:layout_alignParentEnd="true"
      android:layout_alignParentRight="true"
      android:layout_marginBottom="@dimen/margin_small"
      android:layout_marginRight="@dimen/margin_small"
      android:layout_marginEnd="@dimen/margin_small"
      android:src="@color/red"
      android:visibility="gone" />

</RelativeLayout>