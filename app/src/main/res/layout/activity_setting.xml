<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/main_background"
        android:elevation="@dimen/elevation_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ToolbarPopupTheme" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@string/setting_basic"
                android:textColor="@color/main_text_colorful"
                android:textSize="@dimen/text_normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_view_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_normal"
                android:foreground = "?attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/awesome_background">

                    <android.support.constraint.Group
                        android:id="@+id/group_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="tv_language,tv_language_detail,view_language" />

                    <TextView
                        android:id="@+id/tv_language"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:text="@string/language"
                        android:textColor="@color/main_text_color_dark"
                        android:textSize="@dimen/text_normal"
                        android:onClick="onClick"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_language_detail"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:paddingTop="@dimen/margin_normal"
                        android:text="Auto"
                        android:textColor="@color/main_text_color_dark"
                        android:textSize="@dimen/text_small"
                        android:onClick="onClick"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_language" />

                    <View
                        android:id="@+id/view_language"
                        android:layout_width="0.0dip"
                        android:layout_height="1.0px"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:background="@color/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_language_detail" />

                    <android.support.constraint.Group
                        android:id="@+id/group_clear_cache"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="tv_clear_cache,tv_clear_cache_detail,view_language" />

                    <TextView
                        android:id="@+id/tv_clear_cache"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:text="@string/clear_cache"
                        android:textColor="@color/main_text_color_dark"
                        android:textSize="@dimen/text_normal"
                        android:onClick="onClick"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_language" />

                    <TextView
                        android:id="@+id/tv_clear_cache_detail"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:paddingTop="@dimen/margin_normal"
                        android:text="@string/clear_cache_detail"
                        android:textColor="@color/main_text_color_dark"
                        android:textSize="@dimen/text_small"
                        android:onClick="onClick"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_clear_cache" />

                    <View
                        android:id="@+id/view_text_size"
                        android:layout_width="0.0dip"
                        android:layout_height="1.0px"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:background="@color/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_clear_cache_detail" />

                    <android.support.constraint.Group
                        android:id="@+id/group_text_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="tv_text_size,tv_text_size_detail,view_text_size" />

                    <TextView
                        android:id="@+id/tv_text_size"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:text="@string/text_size"
                        android:textColor="@color/main_text_color_dark"
                        android:textSize="@dimen/text_normal"
                        android:onClick="onClick"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_text_size" />

                    <TextView
                        android:id="@+id/tv_text_size_detail"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:paddingTop="@dimen/margin_normal"
                        android:text="@string/normal"
                        android:textColor="@color/main_text_color_dark"
                        android:textSize="@dimen/text_small"
                        android:onClick="onClick"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_text_size" />

                    <View
                        android:id="@+id/view_auto_refresh"
                        android:layout_width="0.0dip"
                        android:layout_height="1.0px"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:background="@color/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_text_size_detail" />

                    <android.support.constraint.Group
                        android:id="@+id/group_auto_refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="tv_auto_refresh,tv_auto_refresh_detail,view_auto_refresh,sw_auto_refresh" />

                    <TextView
                        android:id="@+id/tv_auto_refresh"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:text="@string/auto_refresh"
                        android:textColor="@color/main_text_color_dark"
                        android:textSize="@dimen/text_normal"
                        android:onClick="onClick"
                        app:layout_constraintEnd_toStartOf="@+id/sw_auto_refresh"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_auto_refresh" />

                    <TextView
                        android:id="@+id/tv_auto_refresh_detail"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:paddingTop="@dimen/margin_normal"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:text="@string/auto_refresh_detail"
                        android:textColor="@color/main_text_color_dark"
                        android:textSize="@dimen/text_small"
                        android:onClick="onClick"
                        app:layout_constraintEnd_toStartOf="@+id/sw_auto_refresh"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_auto_refresh" />

                    <Switch
                        android:id="@+id/sw_auto_refresh"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginRight="@dimen/margin_small"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_auto_refresh_detail"
                        app:layout_constraintEnd_toEndOf="@+id/tv_language"
                        app:layout_constraintTop_toTopOf="@+id/tv_auto_refresh" />

                    <View
                        android:id="@+id/view_auto_loadmore"
                        android:layout_width="0.0dip"
                        android:layout_height="1.0px"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:background="@color/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_auto_refresh_detail" />

                    <android.support.constraint.Group
                        android:id="@+id/group_auto_loadmore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="tv_auto_loadmore,tv_auto_loadmore_detail,view_auto_loadmore,sw_auto_loadmore" />

                    <TextView
                        android:id="@+id/tv_auto_loadmore"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:text="@string/auto_loadmore"
                        android:textColor="@color/main_text_color_dark"
                        android:textSize="@dimen/text_normal"
                        android:onClick="onClick"
                        app:layout_constraintEnd_toStartOf="@+id/sw_auto_loadmore"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_auto_loadmore" />

                    <TextView
                        android:id="@+id/tv_auto_loadmore_detail"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:paddingTop="@dimen/margin_normal"
                        android:text="@string/auto_loadmore_detail"
                        android:textColor="@color/main_text_color_dark"
                        android:textSize="@dimen/text_small"
                        android:onClick="onClick"
                        app:layout_constraintEnd_toStartOf="@+id/sw_auto_loadmore"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_auto_loadmore" />

                    <Switch
                        android:id="@+id/sw_auto_loadmore"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginRight="@dimen/margin_small"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_auto_loadmore_detail"
                        app:layout_constraintEnd_toEndOf="@+id/tv_language"
                        app:layout_constraintTop_toTopOf="@+id/tv_auto_loadmore" />

                    <View
                        android:id="@+id/view_back_exit"
                        android:layout_width="0.0dip"
                        android:layout_height="1.0px"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:background="@color/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_auto_loadmore_detail" />

                    <android.support.constraint.Group
                        android:id="@+id/group_back_exit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="tv_back_exit,tv_back_exit_detail,sw_back_exit,view_back_exit" />

                    <TextView
                        android:id="@+id/tv_back_exit"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:text="@string/back_exit"
                        android:textColor="@color/main_text_color_dark"
                        android:textSize="@dimen/text_normal"
                        android:onClick="onClick"
                        app:layout_constraintEnd_toStartOf="@+id/sw_back_exit"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_back_exit" />

                    <TextView
                        android:id="@+id/tv_back_exit_detail"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:paddingTop="@dimen/margin_normal"
                        android:text="@string/back_exit_detail"
                        android:textColor="@color/main_text_color_dark"
                        android:textSize="@dimen/text_small"
                        android:onClick="onClick"
                        app:layout_constraintEnd_toStartOf="@+id/sw_back_exit"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_back_exit" />

                    <Switch
                        android:id="@+id/sw_back_exit"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginRight="@dimen/margin_small"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_back_exit_detail"
                        app:layout_constraintEnd_toEndOf="@+id/tv_language"
                        app:layout_constraintTop_toTopOf="@+id/tv_back_exit" />

                    <View
                        android:id="@+id/view_swipe_back"
                        android:layout_width="0.0dip"
                        android:layout_height="1.0px"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:background="@color/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_back_exit_detail" />

                    <android.support.constraint.Group
                        android:id="@+id/group_swipe_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="tv_swipe_back,tv_swipe_back_detail,sw_swipe_back,view_swipe_back" />

                    <TextView
                        android:id="@+id/tv_swipe_back"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:text="@string/swipe_back"
                        android:textColor="@color/main_text_color_dark"
                        android:textSize="@dimen/text_normal"
                        android:onClick="onClick"
                        app:layout_constraintEnd_toStartOf="@+id/sw_swipe_back"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_swipe_back" />

                    <TextView
                        android:id="@+id/tv_swipe_back_detail"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:paddingTop="@dimen/margin_normal"
                        android:text="@string/swipe_back_detail"
                        android:textColor="@color/main_text_color_dark"
                        android:textSize="@dimen/text_small"
                        android:onClick="onClick"
                        app:layout_constraintEnd_toStartOf="@+id/sw_swipe_back"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_swipe_back" />

                    <Switch
                        android:id="@+id/sw_swipe_back"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginRight="@dimen/margin_small"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_swipe_back_detail"
                        app:layout_constraintEnd_toEndOf="@+id/tv_language"
                        app:layout_constraintTop_toTopOf="@+id/tv_swipe_back" />

                    <View
                        android:id="@+id/view_random_header"
                        android:layout_width="0.0dip"
                        android:layout_height="1.0px"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:background="@color/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_swipe_back_detail" />

                    <android.support.constraint.Group
                        android:id="@+id/group_random_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="tv_random_header,tv_random_header_detail,view_random_header" />

                    <TextView
                        android:id="@+id/tv_random_header"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:text="@string/random_header_server"
                        android:textColor="@color/main_text_color_dark"
                        android:textSize="@dimen/text_normal"
                        android:onClick="onClick"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_random_header" />

                    <TextView
                        android:id="@+id/tv_random_header_detail"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:paddingTop="@dimen/margin_normal"
                        android:textColor="@color/main_text_color_dark"
                        android:textSize="@dimen/text_small"
                        android:onClick="onClick"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_random_header" />

                    <View
                        android:id="@+id/view_list_type"
                        android:layout_width="0.0dip"
                        android:layout_height="1.0px"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:background="@color/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_random_header_detail" />

                    <android.support.constraint.Group
                        android:id="@+id/group_list_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="tv_list_type,tv_list_type_detail,view_list_type" />

                    <TextView
                        android:id="@+id/tv_list_type"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:text="@string/list_type"
                        android:textColor="@color/main_text_color_dark"
                        android:textSize="@dimen/text_normal"
                        android:onClick="onClick"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view_list_type" />

                    <TextView
                        android:id="@+id/tv_list_type_detail"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_normal"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_normal"
                        android:paddingTop="@dimen/margin_normal"
                        android:textColor="@color/main_text_color_dark"
                        android:textSize="@dimen/text_small"
                        android:onClick="onClick"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_list_type" />

                </android.support.constraint.ConstraintLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textauto_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_normal"
                android:text="@string/setting_other"
                android:textColor="@color/main_text_colorful"
                android:textSize="@dimen/text_normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_view_language" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_normal"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_marginRight="@dimen/margin_normal"
                android:layout_marginTop="@dimen/margin_normal"
                android:focusable="true"
                android:foreground = "?attr/selectableItemBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textauto_refresh">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.constraint.Group
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="tv_donate, tv_donate_detail" />

                    <TextView
                        android:id="@+id/tv_donate"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:text="@string/donate"
                        android:textColor="@color/main_text_color_dark"
                        android:textSize="@dimen/text_normal"
                        android:onClick="onClick"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_donate_detail"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:paddingTop="@dimen/margin_normal"
                        android:text="@string/donate_detail"
                        android:textColor="@color/main_text_color_dark"
                        android:textSize="@dimen/text_small"
                        android:onClick="onClick"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_donate" />

                    <View
                        android:id="@+id/view_join_us"
                        android:layout_width="0.0dip"
                        android:layout_height="1.0px"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginRight="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_normal"
                        android:background="@color/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_donate_detail" />

                    <android.support.constraint.Group
